@model IEnumerable<Rooms>

<body class="bd-gradient">
    <header>
        <div class="g-header">
            <div class="logo">
                <a href="/Room/Home">
                    <img src="~/SVGs/logo-white.svg" alt="USER 404 Logo">
                </a>
            </div>
            <div class="opt">
                <a class="a-home" href="/Room/About">Sobre o projeto</a>
            </div>
        </div>
    </header>
    <section class="cadastro">
        <div class="form-init">
            <form asp-action="Criar" method="POST">
                <div class="pt-1">
                    <p>
                        Crie sua sala!
                        <br>
                        Defina uma senha
                    </p>
                    <input type="text" name="" id="" placeholder="Defina uma senha...">
                    <button>Criar sala</button>
                </div>
            </form>
            <div class="pt-2">
                <img src="~/SVGs/enfeite.svg" alt="">
            </div>
            <form asp-action="Entrar" method="POST">
                <div class="pt-3">
                    <p>
                        Já tem uma sala?
                        <br>
                        Insira o código no campo abaixo
                    </p>
                    <input type="text" asp-for="Room" name="" id="" placeholder="Insira o código...">
                    <button>Entrar</button>
                </div>
            </form>
        </div>
        <div class="ilustra-home">
            <img src="~/SVGs/ilustra-home.svg" alt="">
        </div>
    </section>
</body>